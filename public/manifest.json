{
  "manifest_version": 3,
  "name": "Simple Todo Extension",
  "version": "1.0.0",
  "description": "A simple React-based TODO app as Chrome Extension",
  "action": {
    "default_popup": "index.html",
    "default_title": "Todo App"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content.js"]
    }
  ]
}
